{% extends 'EphpWsBundle::layout.html.twig' %}

{% block admin_content %}
<h1>Help\Field edit</h1>

<form action="{{ path('admin_help_field_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Modifica</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_help_field', {'service': entity.service.name}) }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_help_field_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}