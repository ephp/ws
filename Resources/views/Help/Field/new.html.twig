{% extends 'EphpWsBundle::layout.html.twig' %}

{% block admin_content %}
<h1>Help\Field creation</h1>

<form action="{{ path('admin_help_field_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Crea</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_help_field', {'service': entity.service.name}) }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}