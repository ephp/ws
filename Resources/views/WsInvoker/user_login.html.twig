{% extends 'EphpWsInvokerBundle::layout.html.twig' %}

{% block admin_content %}
    <p>
	    Applicazione di esempio del framework RESTafari by Ephp s.r.l.<br/><br/>
    </p>

    <h1>Login</h1>

    <p>
        Effettuare il login con uno dei seguenti utenti di default: <em>user/userpass</em> <small>(ROLE_USER)</small> or <em>admin/adminpass</em> <small>(ROLE_ADMIN)</small>
    </p>

    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("login_check") }}" method="post" id="login">
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" />
        </div>

        <input type="submit" class="symfony-button-grey" value="LOGIN" />
    </form>
{% endblock %}


