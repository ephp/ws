{% extends 'EphpWsBundle::layout.html.twig' %}

{% block admin_content %}
<h1>Config\Service</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Method</th>                <td>{{ entity.method }}</td>        </tr>
        <tr>
            <th>Uri</th>                <td>{{ entity.uri }}</td>        </tr>
        <tr>
            <th>Query_string</th>                <td>{{ entity.querystring }}</td>        </tr>
        <tr>
            <th>Data_type</th>                <td>{{ entity.datatype }}</td>        </tr>
        <tr>
            <th>Data_body</th>                <td><pre>{{ entity.databody }}</pre></td>        </tr>
        <tr>
            <th>Last_call_at</th>                <td>{{ entity.lastcallat|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Last_status_code</th>                <td>{{ entity.laststatuscode }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_service') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_service_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_service_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}